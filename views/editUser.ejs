<%- include("./partials/header")  %>

<style>
    #list-online {
        max-height: 500px;
        min-height: 500px;
        background-color: aquamarine;
        overflow-y: scroll;
    }
</style>
<body style="background-color: black;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-6 bg-info p-3 rounded my-3">

                    <h1>Alterar Conta</h1>
                    <br>                        
                    <form action="/editUser" method="POST">
                        <input class="form-control" type="email" id="email" name="email" placeholder="Seu E-mail" value="<%= user.email %>">
                        <br>
                        <input class="form-control" type="text" id="name" name="name" placeholder="Seu Nome" value="<%= user.name %>">
                        <br>
                        <input class="form-control" type="number" id="discount" name="discount" value="0" value="<%= user.discount %>">
                        <br>
                        <button type="submit" class="btn btn-primary">Alterar</button>
                    </form>
                    <br>
                    
            </div>
        </div>
    </div>
</body>

<%- include("./partials/footer")  %>

</html>