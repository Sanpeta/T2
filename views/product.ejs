<%- include("./partials/header")  %>

<style>
    #list-invites {
        max-height: 500px;
        min-height: 500px;
        background-color: aquamarine;
        overflow-y: scroll;
    }
</style>

<body style="background-color: black;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-6 rounded bg-info my-3 p-3">

                <h1>Informações do Produto</h1>
                <br>
                <div id="list-invites">
                   
                    <label class="form-check-label p-2" for="oponent">
                        <%= name %>
                        <br>
                        <%= price %>
                        <br>
                        <img height="250px" width="250px" src="<%= image %>" alt="">
                        <br>
                        <br>
                        <% if(qrSrc != "") { %>
                            <img height="150px" width="150px" src="<%= qrSrc %>" alt="">
                        <% } %>
                    </label>
                </div>
            </div>
        </div>
    </div>
</body>

<%- include("./partials/footer")  %>

</html>