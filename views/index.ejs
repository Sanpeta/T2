                            <input class="form-control" type="text" id="name" name="name" placeholder="Seu Nome">
                            <br>
                            <input class="form-control" type="password" id="password" name="password" placeholder="Senha">
                            <br>
                            <input class="form-control" type="hidden" id="discount" name="discount" value="0">
                            <br>
                            <button type="submit" class="btn btn-primary">Criar</button>
                        </form>
                        <br>
                        
                </div>
            </div>
        </div>
